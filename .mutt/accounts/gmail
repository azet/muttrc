# identitah
set realname="Aaron Zauner"
set from="azet@azet.org"
set signature='~/.mutt/accounts/gmail.sig'
set imap_user="$from"
set imap_pass=xxxx
set pgp_sign_as=0xFDB9B5D5
set pgp_autosign=yes

# imap
set folder      = "imaps://imap.gmail.com:993"
set spoolfile   = "+INBOX"
set postponed   = "+[Gmail]/Drafts"
set trash       = "+[Gmail]/Trash"
set mbox        = +INBOX
set record      = "=[Gmail]/Sent Mail"
save-hook       .* "=[Gmail]/Spam"
set copy        = no

# smtp
set smtp_url = "smtp://azet@azet.org@smtp.gmail.com:587/"
set smtp_pass = "xxx" 

# sec. related
set move = no 
set imap_keepalive = 900

set nouse_domain

# gmail specifics
bind index,pager g imap-fetch-mail      # get new mail
bind index,pager a group-reply          # reply-all
bind index,pager c mail                 # compose new

# search imap (prefix =b)
set simple_search="=b %s"

